<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <% include ../partials/head %>
    <title><%= title %></title>
</head>
<body> 
    <% include ../partials/header %>
    <div class="container">
        <div class="jumbotron text-center col-12">
            <h1><span class="fa fa-lock"></span> <%= title %></h1>

            <p>Login or Register here:</p>
            <% if (isLoggedIn) { %>
                <a href="/logout" class="btn btn-secondary"><i class="fas fa-sign-out-alt"></i> &nbsp;Logout</a>
                <a href="/dashboard" class="btn btn-info"><i class="fas fa-user-circle"></i>&nbsp;My Account</a>
                <% } else { %>
            <a href="/login" class="btn btn-primary"><i class="fas fa-sign-in"></i> &nbsp;Local Login</a>
            <a href="/signup" class="btn btn-info"><i class="fas fa-user-plus"></i> &nbsp;Local Signup</a>
            <% } %>
        </div>

        <% if (isLoggedIn) { %>
        <div class="row">
            <% if (!products) { %>
                <p class="text-left">No product found</p>
            <% } else { %>
                <p class="text-left col-12">Total: <%= products.length %></p>
            
                <% for(var i=0; i < products.length; i++) {%>
                <div class="col-3">
                    <img src="<%= products[i].full_image %>" alt="<%= products[i].description%>" class="img-thumbnail rounded">
                    <br></br>
                    <div>
                        <h5><%= products[i].name %></h5>
                        <div>
                            Stock: <%= products[i].stock %>
                        </div>
                        <div>
                            Price: $<%= products[i].price %>
                        </div>
                    </div>
                    <br></br>
                    <div>
                        <form action="/book" method="post">
                            <input type="hidden" value="<%= products[i].id %>" name="product">
                            <input type="submit" class="add-to-cart btn btn-primary" value="Book Now!!"/>
                        </form>
                        
                    </div>
                </div>
                <% } %>
                </div>
            <% } %>
        </div>
        <% } %>
    </div>
    <% include ../partials/footer %>
</body>
</html>